<Window x:Class="PhoneBook.EditPersonForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="EditPerson" Height="234.701" Width="286" FontSize="14">
    <Grid>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="90,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <TextBox x:Name="tbLastName" HorizontalAlignment="Left" Height="23" Margin="90,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <TextBox x:Name="tbPatronymic" HorizontalAlignment="Left" Height="23" Margin="90,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <TextBox x:Name="tbDesc" HorizontalAlignment="Left" Height="23" Margin="90,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <Label Content="Имя: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Фамилия: " HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
        <Label Content="Отчество: " HorizontalAlignment="Left" Margin="9,89,0,0" VerticalAlignment="Top"/>
        <Label Content="Доп.Инфо: " HorizontalAlignment="Left" Margin="9,125,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bEditPerson" Content="Редактировать" HorizontalAlignment="Left" Margin="90,170,0,0" VerticalAlignment="Top" Width="104" Click="bAddPerson_Click"/>
    </Grid>
</Window>
